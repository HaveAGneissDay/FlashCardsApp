
<div class="content">
    <div class="row">
        <div class="col s3"></div>
            <div class="col s6">
                 <div class="frosty flashcard_play">
                     
                        <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                          <div class="flipper">
                            <div class="front">
                              
                              
                                    <div class="flashcardplay card-panel #e57373 white border 50px">
                                      <span><h5> {{category}} I am the FRONT of the card where you have entered the flashcard question. 
                                                                    Scroll over me to flip the card</h5></span>
                                    </div>
                                
                            </div>
                            <div class="back"> <!-- back content -->
                              
                                    <div class="flashcardplay card-panel #e57373 white border 50px">
                                      <span><h5>I am the BACK of the card where you have entered the flashcard question. 
                                      Scroll over me to flip the card</h5></span>
                                    </div>

                                  
                                <div class="card-action">
                                      <a class="waves-effect waves-light #e57373 red lighten-2 btn">I got it right</a>
                                      <a class="waves-effect waves-light #e57373 red lighten-2 btn">I got it wrong</a>
                                    </div>
                            </div> <!-- /back -->
                            
                        
                          </div> <!-- /flipper -->
                          
                        </div> <!-- /flip-container -->
                       
                      
                     
                
                </div> <!-- /frosty --> 
            </div> <!-- col s6 --> 
           
        
        <div class="col s3"></div>
    </div> <!-- row -->  
    <div class="row">
          <div class="col s3"></div>

            <div class="col s6">
                 <div class="frosty">
                      <div class="instruction row">
                        <h5 id="instruction_flip"><b>Flip the card to get the answer</b></h5>
                      </div>
                 </div>
            </div>

          <div class="col s3"></div>
    </div>
</div> <!-- content --> 
